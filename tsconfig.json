{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "moduleResolution": "NodeNext"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}